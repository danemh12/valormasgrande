#include <stdio.h>
int main(void){
	int A, B, C;
	int d, may, x=0, num=0;
	printf ("introduzca el valor de A \n ");
	scanf("%d", &A);
	printf("introduzca el valor de B \n ");
	scanf("%d", &B);
	printf("introduzca el valor de C \n");
	scanf("%d", &C);
	
  
  if(A>B)
	may=A;
	else 
	may=B;
	printf("el numero mayor es: %d \n", may);
	
	for(int i=1; i<=may; i++)
	{
	
  	
  	num=num+i;
  	printf("%d+ ",i);
  	
	
	}
	printf ("la sumatoria es: %d", num);
	
	
	
	return 0;
	

}
